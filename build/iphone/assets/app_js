var app={};con=Ti.Database.open('task');var tabGroup=Ti.UI.createTabGroup();var service=Ti.App.iOS.registerBackgroundService({url:'./include/notification.js'});Ti.include('./include/log.js');Ti.include('./include/addtask.js');Ti.include('./include/taskdetail.js');Ti.include('./include/tasklist.js');Ti.include('./include/timer.js');Ti.include('./include/config.js');Ti.include('./include/db.js');var TaskListTab=app.tasklist.createTab();var ConfigTab=app.config.createTab();var logWin=Ti.UI.createWindow({title:'ログ',barColor:'#B0C4DE',backgroundImage:'back2.jpg'});var logTab=Ti.UI.createTab({icon:'log.png',title:'ログ',window:logWin});var logView={};logView=app.log.createView(logTab);logWin.add(logView);tabGroup.addTab(TaskListTab);tabGroup.addTab(logTab);tabGroup.addTab(ConfigTab);tabGroup.addEventListener('focus',function(e){if(e.index==1){logWin.remove(logView);logView=app.log.createView(logTab);logWin.add(logView);}});tabGroup.open();